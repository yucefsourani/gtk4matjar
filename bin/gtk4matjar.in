#!/usr/bin/env python3
# @PYTHON@
"""Launcher script for installed application."""

import os
import sys
import signal
import locale
import gettext

# Set up paths
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

# Add resource path
sys.path.insert(1, pkgdatadir)

# Set up locale
locale.bindtextdomain('{{ NEW_NAME }}', localedir)
locale.textdomain('{{ NEW_NAME }}')
gettext.bindtextdomain('{{ NEW_NAME }}', localedir)
gettext.textdomain('{{ NEW_NAME }}')

# Handle SIGINT
signal.signal(signal.SIGINT, signal.SIG_DFL)

if __name__ == '__main__':
    import gi
    gi.require_version('Gtk', '4.0')
    gi.require_version('Adw', '1')
    
    from {{ NEW_NAME }} import __main__
    sys.exit(__main__.main())
